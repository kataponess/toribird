/* -------------modal------------- */
cite{
	display: block;
	text-align: right;
}

cite a{
	border-bottom: solid 3px #039be5;
}

.modal-img{
	margin-left: auto !important;
	margin-right: auto !important;
}

/* -------------main------------- */
.hide{
	display: none;
}

h2{
	font-size: 25px;
	margin-left: 10px;
}

.row{
	display: flex;
	flex-wrap: wrap;
	margin: 10px;
}

.dropdownlist{
	margin-left: 0 !important;
	margin-right: 0 !important;
}

.select-zoonames{
	background: #EF5350;
	display: block;
	margin-left: 0 !important;
	margin-right: 0 !important;
}

.fa-angle-right{
	font-size: 55px;
	padding-top: 15px;
}

.result{
	margin-left: 0 !important;
	margin-right: 0 !important;
}

.zoo-name-outer{
	border: 3px solid #EF5350;
	border-radius: 5px;
}

.zoo-name{
	background: #EF5350;
	color: black;
	font-size: 20px;
	display: flex;
	justify-content: space-between;
}

.parrot-card{
	display: flex;
	align-items: center;
	color: black;
	font-size: 20px;
	border: 3px solid #EF5350;
	cursor : pointer;
}

p{
	margin: 0;
}

.result-img{
	width: 100px;
	height: 100px;
	object-fit: cover;
	object-position: 10% 3%;
	margin-top: 6px;
	margin-left: 6px;
}

.result-name{
	margin-left: 3px;
	font-size: 16px;
  position: relative;
}

.result-name::after {
  position: absolute;
  bottom: -2px;
  left: 0;
  content: '';
  width: 100%;
	height: 3px;
	background: black;
  transform: scale(0, 1);
  transform-origin: right top;
  transition: transform .3s;
}
.parrot-card:hover .result-name::after {
  transform-origin: left top;
  transform: scale(1, 1);
}

@media (max-width: 576px){
.fa-angle-right{
	display: none;
}
}
